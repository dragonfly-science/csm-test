	author = {Chen, Lin and Ren, Chunying and Zhang, Bai and Wang, Zongming and Liu, Mingyue and Man, Weidong and Liu, Jiafu},
	urldate = {2021-05-27},
	date = {2021-08-01},
	langid = {english},
	keywords = {Changbai Mountains Mixed Forests Ecoregion, {GEDI} {LiDAR}, Geographically weighted regression, Random forests, Sentinel imagery, Stand volume},
