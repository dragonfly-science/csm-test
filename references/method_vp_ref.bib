@article{koltunov_edart_2020,
	title = {{eDaRT}: The Ecosystem Disturbance and Recovery Tracker system for monitoring landscape disturbances and their cumulative effects},
	volume = {238},
	issn = {0034-4257},
	url = {https://www.sciencedirect.com/science/article/pii/S0034425719305012},
