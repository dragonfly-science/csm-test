	journaltitle = {Remote Sensing of Environment},
	shortjournal = {Remote Sensing of Environment},
	author = {Hermosilla, Txomin and Wulder, Michael A. and White, Joanne C. and Coops, Nicholas C. and Hobart, Geordie W.},
	urldate = {2021-05-27},
	date = {2015-12-01},
	langid = {english},
	keywords = {Change detection, Image compositing, Landsat, Object based change, Temporal analysis},
	file = {ScienceDirect Full Text PDF:/home/fabian/snap/zotero-snap/common/Zotero default/storage/WNSVYAFG/Hermosilla et al. - 2015 - Regional detection, characterization, and attribut.pdf:application/pdf;ScienceDirect Snapshot:/home/fabian/snap/zotero-snap/common/Zotero default/storage/5X8F77ZN/S0034425715301279.html:text/html},
