	shortjournal = {Remote Sensing of Environment},
	author = {Duncanson, Laura and Neuenschwander, Amy and Hancock, Steven and Thomas, Nathan and Fatoyinbo, Temilola and Simard, Marc and Silva, Carlos A. and Armston, John and Luthcke, Scott B. and Hofton, Michelle and Kellner, James R. and Dubayah, Ralph},
	urldate = {2021-05-27},
