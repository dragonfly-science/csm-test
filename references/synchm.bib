	author = {Kattenborn, Teja and Leitloff, Jens and Schiefer, Felix and Hinz, Stefan},
	urldate = {2022-10-25},
	date = {2021-03-01},
	langid = {english},
	keywords = {Convolutional Neural Networks ({CNN}), Deep learning, Earth observation, Plants, Remote sensing, Vegetation},
