	journaltitle = {{GeoInformatica}},
	shortjournal = {{GeoInformatica}},
	author = {Wang, Lei and Birt, Andrew and Lafon, Charles and Cairns, David and Coulson, Robert and Tchakerian, Maria and Xi, Weimin and Popescu, Sorin and Guldin, James},
