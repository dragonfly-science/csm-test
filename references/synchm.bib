	langid = {english},
	note = {Number: 11
Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {{UAV}-{LiDAR}, extrapolation, {GF}-6, planted forest, precision silviculture, wall-to-wall mapping},
